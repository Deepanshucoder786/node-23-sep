<%- include('./base/header.ejs') %>

    <div class="container">
        <div class="row">
            <h4 class="text-center "> Student List</h4>
            <table class="table table-striped text-center">
                <thead>
                    <tr>
                        <th>Roll No</th>
                        <th>first Name</th>
                        <th>Last Name</th>
                        <th>Father Name</th>
                        <th>Adhar Card</th>
                        <th>Mobile No</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <% students.forEach((student)=>{ %>
                    <tr>
                        <td>
                            <%= student.rollNo %>
                        </td>
                        <td>
                            <%= student.firstName %>
                        </td>
                        <td>
                            <%= student.lastName %>
                        </td>
                        <td>
                            <%= student.fatherName %>
                        </td>
                        <td>
                            <%= student.adharCardNo %>
                        </td>
                        <td>
                            <%= student.mobileNo %>
                        </td>
                        <td>
                            <a class="btn btn-warning w-30" href="/edit/student/page/<%= student._id  %>">Edit</a>
                            <a class="btn btn-danger w-30" href="/delete/student/<%= student._id  %>">Delete</a>
                        </td>
                    </tr>
                    <% }) %>
            </table>
        </div>
    </div>
    <%- include('./base/footer.ejs') %>